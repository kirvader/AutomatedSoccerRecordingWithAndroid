<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.hawkeye.balltracker.activities.CameraActivity">


    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mylinear"
        app:implementationMode="compatible">

    </androidx.camera.view.PreviewView>

    <app.hawkeye.balltracker.views.AreaOfDetectionView
        android:id="@+id/areaOfDetectionSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mylinear"
        />

    <app.hawkeye.balltracker.views.DetectedObjectsView
        android:id="@+id/detectedObjectsSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mylinear" />

    <app.hawkeye.balltracker.views.TrackingSystemStateView
        android:id="@+id/trackingSystemStateView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/mylinear" />

    <LinearLayout
        android:id="@+id/mylinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Spinner
            android:id="@+id/imageAnalyzerChoiceSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/videoCaptureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/start_recording" />

            <Button
                android:id="@+id/scanPivoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pivo pod scan" />
        </LinearLayout>

        <TextView
            android:id="@+id/inference_time_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


    </LinearLayout>

</RelativeLayout>